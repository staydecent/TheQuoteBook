<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="quotebook.theoneandonly.com.thequotebook" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Quotebook"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleQuoteActivity"
            android:label="@string/title_activity_single_quote"
            android:parentActivityName=".Quotebook" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="quotebook.theoneandonly.com.thequotebook.Quotebook" />
        </activity>
    </application>

</manifest>
